{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Merge Conditions Modeling Language",
    "patterns": [
      { "include": "#mcml" },
	    { "include": "source.dsl" },
      { "include": "source.bap" }
    ],
    "repository": {
      "mcml": {
        "patterns":[
          {
            "name": "support.class.mcml",
            "match": "\\bpattern\\b"
          },
          {
            "name": "entity.name.function.pattern.def.mcml",
            "match": "(?<=\\bpattern\\s+)\\w+(?=\\s*[:(])"
          },
          {
            "name": "entity.name.function.pattern.call.mcml",
            "match": "(?<=\\bq\\()\\s*\\b(\\w+)\\b(?!\\s*\\()"
          },
          {
            "name": "variable.language.mcml",
            "match": "\\bmc\\b"
          },
          {
            "name": "keyword.operator.save.dsl",
            "match": ">-"
          },
          {
            "name": "keyword.operator.equals.dsl",
            "match": "=="
          }
        ]
      }
    },
    "scopeName": "source.mcml"
  }
  