{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Merge Conditions Modeling Language",
    "patterns": [
      { "include": "#mcml" },
      { "include": "source.csml" }
    ],
    "repository": {
      "mcml": {
        "patterns":[
          {
            "name": "support.class.mcml",
            "match": "\\bpattern\\b"
          },
          {
            "name": "entity.name.pattern.mcml",
            "match": "(?<=\\bpattern\\s+)\\w+(?=\\s*[:(])"
          },
          {
            "name": "variable.language.mcml",
            "match": "\\bmc\\b"
          },
          {
            "name": "variable.metavar.mcml",
            "match": "\\?\\?|\\?[a-zA-Z]+\\d*"
          },
          {
            "name": "variable.placeholder.mcml",
            "match": "!!|![a-zA-Z]+\\d*"
          }
          
        ]
      }
    },
    "scopeName": "source.mcml"
  }
  